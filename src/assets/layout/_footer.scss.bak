footer {
  background-color: var(--lavender-color);
  color: #f7f7f7;
  text-align: center;
  padding: 20px;
  position: fixed;
  margin-bottom: 0;
  bottom: 0;
  width: 100%;
}

.footer-content {
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  flex-wrap: wrap;
}

.footer-section {
  flex: 1;
  margin: 10px;
}

.footer-section h2 {
  font-size: 20px;
  margin-bottom: 10px;
}

.footer-section ul {
  list-style: none;
  padding: 0;
}

.footer-section ul li {
  margin-bottom: 5px;
}

.footer-section ul li a {
  text-decoration: none;
  color: #f7f7f7;
  transition: color 0.3s ease;
}

.footer-section ul li a:hover {
  color: #ccc;
}

.footer-bottom {
  margin-top: 20px;
  font-size: 14px;
}
#footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: var(--lavender-color);
  color: white;
  text-align: center;          
}

.footer-layout{
  position: fixed;
  background: var(--lavender-color);
  margin: auto;
  width: 100%;
  z-index: 10;
}
/**=====================
     47. Footer CSS Ends
==========================**/
